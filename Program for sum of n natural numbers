// This is a Naive Approach as because it takes O(n) Time Complexity and O(1) Space Complexity.
// O(n) is because we are using a for loop which runs upto n times.
#include <iostream>
using namespace std;
int findSum(int n){
  int sum = 0;
  for(int i=1;i<=n;i++){
    sum += i;
  }
  return sum;
}
int main(){
int n;
cin >> n;
cout << findSum(n);
return 0;
}
//Now Here is a Recursive Approach which takes O(n) Time Complexity and O(n) Space Complexity.
//
#include <iostream>
using namespace std;
int findSum(int n){
  if(n == 1) return 1;
  return n + findSum(n-1);
}
int main(){
int n;
cin >> n;
cout << findSum(n);
}
// Now we can make this code more efficient by using mathematical formula of Sum of numbers that is (n*(n+1))/2
// It takes O(1) Time Complexity and O(1) Space Complexity.
#include <iostream>
using namespace std;
int findSum(int n){
return (n*(n+1))/2;
}
int main(){
int n;
cin >> n;
cout << findSum(n) << endl;
}
